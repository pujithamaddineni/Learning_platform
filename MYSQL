DELETE FROM course WHERE id BETWEEN 41 AND 60;

ALTER TABLE course ADD COLUMN category VARCHAR(100);
ALTER TABLE course ADD COLUMN query VARCHAR(100);
SET SQL_SAFE_UPDATES = 0;

UPDATE course SET category = 'Python', query = 'python' WHERE title LIKE '%Python%';

-- Web Development
UPDATE course SET category = 'Web Development', query = 'webdev' 
WHERE title LIKE '%HTML%' OR title LIKE '%CSS%' OR title LIKE '%JavaScript%' OR title LIKE '%Flask%' OR title LIKE '%React%' OR title LIKE '%APIs%';

-- Databases
UPDATE course SET category = 'Database', query = 'database' WHERE title LIKE '%MySQL%';

-- Data Structures and Algorithms
UPDATE course SET category = 'DSA', query = 'dsa' WHERE title LIKE '%Data Structures%' OR title LIKE '%Algorithms%';

-- Machine Learning
UPDATE course SET category = 'Machine Learning', query = 'ml' WHERE title LIKE '%Machine Learning%' OR title LIKE '%Deep Learning%' OR title LIKE '%TensorFlow%' OR title LIKE '%NLP%';

-- Data Science
UPDATE course SET category = 'Data Science', query = 'datascience' WHERE title LIKE '%Data Visualization%';

-- DevOps & Cloud
UPDATE course SET category = 'Cloud', query = 'cloud' WHERE title LIKE '%AWS%' OR title LIKE '%Cloud%';

-- Cybersecurity
UPDATE course SET category = 'Cybersecurity', query = 'cyber' WHERE title LIKE '%Cybersecurity%';

-- Operating Systems
UPDATE course SET category = 'Linux', query = 'linux' WHERE title LIKE '%Linux%';

-- Version Control
UPDATE course SET category = 'Tools', query = 'git' WHERE title LIKE '%Git%';

-- Big Data
UPDATE course SET category = 'Big Data', query = 'bigdata' WHERE title LIKE '%Big Data%';
